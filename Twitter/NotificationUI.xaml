<UserControl x:Class="Twitter.NotificationUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Twitter"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="150">
    <Border Margin="5" Name="notificationBorder" CornerRadius="10">
        <TextBlock FontSize="15" HorizontalAlignment="Center" Margin="3" Name="tbMessage" VerticalAlignment="Center" TextWrapping="Wrap">
        </TextBlock>
    </Border>
</UserControl>
